{
    "variables": {
        "region": "eu-central-1",
		"environment": "{{env `packer_env`}}"
 },
    
"builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `region`}}",
			 "most_recent": true,
            "force_deregister": true,
          "instance_type": "t2.micro",
            "run_tags": {
				"Name" : "mediawiki",
				"Environment": "{{user `environment`}}"
				
            },
            "tags": {
                "Name": "mediawiki-releaseami",
                "AmiCategory": "release"				
            }
        }
    ],
    "provisioners": [
	    {
			"type": "ansible",
            "playbook_file": "ansible-mediawiki/plays/installmediawiki.yml"
        }
    ]
}
